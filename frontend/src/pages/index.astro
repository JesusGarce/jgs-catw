---
import Layout from '../layouts/Layout.astro';
---

<Layout title="catw">
  <div class="px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>
      <p class="mt-2 text-gray-600">Bienvenido a Twitter Archiver. Organiza y categoriza tus tweets guardados.</p>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
      <!-- Total Tweets -->
      <div class="card">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-twitter-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Total Tweets</p>
            <p class="text-2xl font-semibold text-gray-900" id="totalTweets">-</p>
          </div>
        </div>
      </div>

      <!-- Categor칤as -->
      <div class="card">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Categor칤as</p>
            <p class="text-2xl font-semibold text-gray-900" id="totalCategories">-</p>
          </div>
        </div>
      </div>

      <!-- 칔ltima Sincronizaci칩n -->
      <div class="card">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">칔ltima Sincronizaci칩n</p>
            <p class="text-2xl font-semibold text-gray-900" id="lastSync">-</p>
          </div>
        </div>
      </div>

      <!-- Tweets Nuevos -->
      <div class="card">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Tweets Nuevos</p>
            <p class="text-2xl font-semibold text-gray-900" id="newTweets">-</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 gap-6 lg:grid-cols-2 mb-8">
      <!-- Sincronizar -->
      <div class="card">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Sincronizar Tweets</h3>
        <p class="text-gray-600 mb-4">Sincroniza tu timeline de Twitter para obtener los tweets m치s recientes.</p>
        <button id="syncBtn" class="btn-primary">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
          Sincronizar Ahora
        </button>
      </div>

      <!-- Ver Tweets -->
      <div class="card">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Ver Tweets</h3>
        <p class="text-gray-600 mb-4">Explora y organiza todos tus tweets guardados por categor칤as.</p>
        <a href="/tweets" class="btn-secondary">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
          Ver Tweets
        </a>
      </div>
    </div>

    <!-- Recent Tweets -->
    <div class="card">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Tweets Recientes</h3>
      <div id="recentTweets" class="space-y-4">
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
          <p class="mt-2 text-gray-500">No hay tweets para mostrar</p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  // API base URL
  const API_BASE = 'http://127.0.0.1:3001/';
  
  // Check authentication status
  async function checkAuth() {
    try {
      const token = localStorage.getItem('authToken');
      if (!token) {
        // Show login button
        document.getElementById('loginBtn').style.display = 'block';
        return false;
      }
      
      // Verify token
      const response = await fetch(`${API_BASE}/user/profile`, {
        headers: {
          'Authorization': `Bearer ${token}`
        }
      });
      
      if (response.ok) {
        document.getElementById('loginBtn').style.display = 'none';
        return true;
      } else {
        localStorage.removeItem('authToken');
        document.getElementById('loginBtn').style.display = 'block';
        return false;
      }
    } catch (error) {
      console.error('Error checking auth:', error);
      return false;
    }
  }
  
  // Load dashboard data
  async function loadDashboardData() {
    const token = localStorage.getItem('authToken');
    if (!token) return;
    
    try {
      // Load stats
      const statsResponse = await fetch(`${API_BASE}/stats`, {
        headers: {
          'Authorization': `Bearer ${token}`
        }
      });
      
      if (statsResponse.ok) {
        const stats = await statsResponse.json();
        document.getElementById('totalTweets').textContent = stats.totalTweets || 0;
        document.getElementById('totalCategories').textContent = stats.totalCategories || 0;
        document.getElementById('newTweets').textContent = stats.newTweets || 0;
        document.getElementById('lastSync').textContent = stats.lastSync ? new Date(stats.lastSync).toLocaleDateString() : 'Nunca';
      }
      
      // Load recent tweets
      const tweetsResponse = await fetch(`${API_BASE}/tweets?limit=5`, {
        headers: {
          'Authorization': `Bearer ${token}`
        }
      });
      
      if (tweetsResponse.ok) {
        const data = await tweetsResponse.json();
        displayRecentTweets(data.tweets);
      }
    } catch (error) {
      console.error('Error loading dashboard data:', error);
    }
  }
  
  // Display recent tweets
  function displayRecentTweets(tweets) {
    const container = document.getElementById('recentTweets');
    
    if (!tweets || tweets.length === 0) {
      container.innerHTML = `
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
          <p class="mt-2 text-gray-500">No hay tweets para mostrar</p>
        </div>
      `;
      return;
    }
    
    container.innerHTML = tweets.map(tweet => `
      <div class="border border-gray-200 rounded-lg p-4">
        <div class="flex items-start space-x-3">
          <div class="flex-shrink-0">
            <div class="w-10 h-10 bg-twitter-600 rounded-full flex items-center justify-center">
              <span class="text-white font-medium">${tweet.authorUsername.charAt(0).toUpperCase()}</span>
            </div>
          </div>
          <div class="flex-1 min-w-0">
            <div class="flex items-center space-x-2 mb-1">
              <span class="text-sm font-medium text-gray-900">@${tweet.authorUsername}</span>
              <span class="text-sm text-gray-500">${new Date(tweet.createdAtTwitter).toLocaleDateString()}</span>
              ${tweet.category ? `<span class="badge badge-primary">${tweet.category}</span>` : ''}
            </div>
            <p class="text-sm text-gray-900">${tweet.content}</p>
            <div class="flex items-center space-x-4 mt-2 text-sm text-gray-500">
              <span>仇벒잺 ${tweet.likeCount}</span>
              <span>游댃 ${tweet.retweetCount}</span>
              <span>游눫 ${tweet.replyCount}</span>
            </div>
          </div>
        </div>
      </div>
    `).join('');
  }
  
  // Sync functionality
  document.getElementById('syncBtn')?.addEventListener('click', async () => {
    const token = localStorage.getItem('authToken');
    if (!token) {
      alert('Debes iniciar sesi칩n primero');
      return;
    }
    
    const button = document.getElementById('syncBtn');
    const originalText = button.innerHTML;
    
    try {
      button.disabled = true;
      button.innerHTML = `
        <svg class="animate-spin w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Sincronizando...
      `;
      
      const response = await fetch(`${API_BASE}/sync`, {
        method: 'POST',
        headers: {
          'Authorization': `Bearer ${token}`
        }
      });
      
      if (response.ok) {
        const result = await response.json();
        alert(`Sincronizaci칩n completada. ${result.newTweets} tweets nuevos.`);
        loadDashboardData();
      } else {
        throw new Error('Error en la sincronizaci칩n');
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error durante la sincronizaci칩n');
    } finally {
      button.disabled = false;
      button.innerHTML = originalText;
    }
  });
  
  // Initialize dashboard
  document.addEventListener('DOMContentLoaded', async () => {
    const isAuthenticated = await checkAuth();
    if (isAuthenticated) {
      loadDashboardData();
    }
  });
</script>
